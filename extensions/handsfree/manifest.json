{
  "manifest_version": 3,
  "name": "my-side-panel",
  "version": "1.0",
  "description": "Drive the browser hands-free",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["activeTab", "scripting", "tabs","clipboardWrite", "clipboardRead", "storage", "unlimitedStorage", "history"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],  
  "action": {
    "default_title": "Toggle Speech to Text"
  },
  "commands": {
    "toggle_speech_to_text": {
      "suggested_key": {
        "default": "Alt+U"
      },
      "description": "Toggle Speech to Text"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
