{
  "name": "mytutor",
  "publisher": "mrrubato",
  "displayName": "mytutor",
  "description": "code tutor is an AI-powered chat participant that helps you learn programming concepts interactively.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "mrrubato",
      "properties": {
          "mrrubato.runinbackground": {
              "type": "boolean",
              "default": "false",
              "description": "Setting to automatically run and edit code"
          },
          "mrrubato.runinterval": {
              "type": "number",
              "default": 30000,
              "description": "Interval to run steps."
          },
          "mrrubato.workprompt": {
            "type": "string",
            "default": "Improve My Code",
            "description": "LLM base prompt."
          },
          "mrrubato.workprompts": {
              "type": "array",
              "items": {
                  "type": "object",
                  "title": "inner objects",
                  "properties": {
                      "name": {
                          "type": "string",
                          "description": "Name of inner object"
                      },
                      "size": {
                          "type": "number",
                          "description": "Size of inner object"
                      }
                  }
              },
              "default": [],
              "description": "my test configurations"
          
          }                    
      }
    },    
    "commands": [
      {
        "command": "mrrubato.mytutor.start",
        "title": "Start handling Uris"
      },
      {
        "command": "mrrubato.mytutor.generate",
        "title": "Run selected statement"
      }
    ],
    "keybindings": [
      {
          "command": "mrrubato.mytutor.generate",
          "key": "ctrl+shift+8",
          "mac": "cmd+shift+8"
      }
    ],    
    "chatParticipants": [
      {
        "id": "mrrubato.mytutor",
        "fullName": "Mr Rubato",
        "name": "tutor",
        "description": "What can I teach you?",
        "isSticky": true,
        "commands": [
          {
            "name": "exercise",
            "description": "Provide exercises to practice a concept."
          },
          {
            "name": "book",
            "description": "Read the book."
          },
          {
            "name": "start",
            "description": "Start playing in background."
          },
          {
            "name": "stop",
            "description": "Stop playing."
          },
          {
            "name": "list",
            "description": "List prompts."
          }          
        ]
      },
      {
        "id": "chat-tools-sample.tools",
        "fullName": "Tool User",
        "name": "tools",
        "description": "I use tools",
        "isSticky": true,
        "commands": [
          {
            "name": "list",
            "description": "List all available tools"
          },
          {
            "name": "all",
            "description": "Use all registered tools. By default, only this extension's tools are used."
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@react-native-community/netinfo": "^11.4.1",
    "@vscode/prompt-tsx": "^0.3.0-alpha.23",
    "ollama": "^0.5.15"
  }

}
